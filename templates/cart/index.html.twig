{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
    
    <div>
        <h1>Votre panier</h1>
    </div>


    {% if games|length > 0 %}
        <table>
            <thead>
                <tr>
                    {# <th>Jeu</th> #}
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for game in games %}
                    <tr>
                        <td>{{game.game.title}}</td>
                        <td>{{game.game.sellingPrice}}</td>
                        <td>{{game.quantity}}</td>
                        <td>{{game.game.sellingPrice * game.quantity}}</td>
                        <td><a href="{{ path('app_cart_remove', {'id': game.game.id} ) }}"><button>Retirer</button></a></td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td>Total : </td>
                    <td>{{total}}</td>
                    <td></td>
                </tr>
            </tfoot>

        </table>
    {% else %}
        <p>Votre panier est vide !</p>
    {% endif %}
    
{% endblock %}
