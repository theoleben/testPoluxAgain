{% extends 'base.html.twig' %}

{% block title %}Réduction{% endblock %}

{% block body %}
    <h1>Réduction</h1>

    <table class="table table-bordered text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ discount.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ discount.type }} %</td>
            </tr>
            <tr>
                <th>Validité</th>
                <td>{{ discount.validity ? discount.validity|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ discount.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <a class="btn sm-btn btn-secondary" href="{{ path('app_admin_discount_index') }}">Retourner à la liste</a>

        <a class="btn btn-info" href="{{ path('app_admin_discount_edit', {'id': discount.id}) }}">Modifier</a>

        {{ include('admin/discount/_delete_form.html.twig') }}
    </div>
{% endblock %}
