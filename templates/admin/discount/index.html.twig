{% extends 'base.html.twig' %}

{% block title %}Index de la reduction{% endblock %}

{% block body %}
    <h1>Index de la reduction</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Validité</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discount in discounts %}
            <tr>
                <td>{{ discount.id }}</td>
                <td>{{ discount.type }}</td>
                <td>{{ discount.validity }}</td>
                <td>{{ discount.description }}</td>
                <td>
                    <a href="{{ path('app_admin_discount_show', {'id': discount.id}) }}">Montrez</a>
                    <a href="{{ path('app_admin_discount_edit', {'id': discount.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de catégorie trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_discount_new') }}">Créer une nouvelle discount</a>
{% endblock %}
