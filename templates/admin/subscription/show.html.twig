{% extends 'base.html.twig' %}

{% block title %}Abonnement{% endblock %}

{% block body %}
    <h1>Abonnement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subscription.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ subscription.title }}</td>
            </tr>
            <tr>
                <th>Numéro de jeu</th>
                <td>{{ subscription.gamesNumber }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ subscription.price }}</td>
            </tr>
            <tr>
                <th>Nouvelle validité de l'abonnement</th>
                <td>{{ subscription.newDuration }}</td>
            </tr>
            <tr>
                <th>Frais de livraison</th>
                <td>{{ subscription.shippingCost }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ subscription.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_subscription_index') }}">Retourner à la liste</a>

    <a href="{{ path('app_admin_subscription_edit', {'id': subscription.id}) }}">Modifier</a>

    {{ include('admin/subscription/_delete_form.html.twig') }}
{% endblock %}
