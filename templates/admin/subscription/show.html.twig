{% extends 'base.html.twig' %}

{% block title %}Abonnement{% endblock %}

{% block body %}
    <h1>Abonnement</h1>

    <table class="table table-bordered text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subscription.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td><strong>{{ subscription.title }}</strong></td>
            </tr>
            <tr>
                <th>Nombre de jeux</th>
                <td>{{ subscription.gamesNumber }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ subscription.price }}</td>
            </tr>
            <tr>
                <th>Nouvelle durée</th>
                <td>{{ subscription.newDuration }}</td>
            </tr>
            <tr>
                <th>Frais de livraison</th>
                <td>{{ subscription.shippingCost }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ subscription.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn sm-btn btn-secondary" href="{{ path('app_admin_subscription_index') }}">Retourner à la liste</a><br>

    <a class="btn btn-info" href="{{ path('app_admin_subscription_edit', {'id': subscription.id}) }}">Modifier</a><br>

    {{ include('admin/subscription/_delete_form.html.twig') }}
{% endblock %}
