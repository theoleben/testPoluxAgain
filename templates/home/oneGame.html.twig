{% extends 'base.html.twig' %}

{% block title %}Affichage des jeux{% endblock %}

{% block body %}

<div class="bootdey">
    <div class="row">
        <section class="panel col-12">
            <div class="panel-body d-flex">
                <div class="col-md-6">
                    <div class="pro-img-details">
                        <img src="/images/superman-comics_625597a250bfe.jpg" alt="Ceci est l'image de polux" style="height: 325px">
                    </div>
                    <div class="pro-img-list">
                        <a href="#">
                            <img src="https://via.placeholder.com/115x100/87CEFA/000000" alt="">
                        </a>
                        <a href="#">
                        <img src="https://via.placeholder.com/115x100/FF7F50/000000" alt="">
                        </a>
                        <a href="#">
                            <img src="https://via.placeholder.com/115x100/20B2AA/000000" alt="">
                        </a>
                        <a href="#">
                            <img src="https://via.placeholder.com/120x100/20B2AA/000000" alt="">
                        </a>
                    </div>
                </div>
        
                <div class="col-md-6">
                    <h4 class="pro-d-title">
                        <h3>
                                {{ game.title }}
                        </h3>
                    </h4>
                    <p>
                        {{ game.description }}
                    </p><hr>
                    <div class="product_meta">
                    {% for cate in game.category %}
                    
                        <span class="posted_in"> <strong>Categories:</strong> <a rel="tag" href="#">{{cate.name}}</a>, <a rel="tag" href="#">Jeu de stratégie</a>, <a rel="tag" href="#">Fait en France</a>, </a>.</span>
                        
                    </div><br>
                    {% endfor %}

                    <div class="m-bot15"> <strong>Tranche d'age :</strong> <span class="amount-old">{{ game.age }}</span> </div><br>
                    <div class="m-bot15"> <strong>Nombre de joueurs :</strong> <span class="amount-old">{{ game.nbPlayers }}</span> </div><br>
                    <div class="m-bot15"> <strong>Temps du jeu :</strong> <span class="amount-old">{{ game.playTime }}</span> </div><br>
                    <div class="m-bot15"> <strong>Matériaux :</strong> <span class="amount-old">{{ game.material }}</span> </div><br>
                
                    
                    <div class="form-group">
                        <div class="m-bot15"> <strong>Location : </strong> <span class="amount-old">{{ game.rentalPrice }} €</span></div><br>
                    <div class="form-group">
                        <div class="m-bot15"> <strong>Prix TTC : </strong> <span class="amount-old">{{ game.sellingPrice }} €</span></div><br>
                        
                        <p>
                            <button class="btn btn-round btn-danger" type="button"><i class="fa fa-shopping-cart"></i> Ajouter au panier</button>
                            <button class="btn btn-round btn-info" type="submit">Acheter</button>
                            <button class="btn btn-round btn-secondary" type="submit">Louer</button>
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<div class=" row card-group d-flex flex-wrap justify-content-around">
    {% for games in games %}


    <div class="col-4 mt-4">
        <div class="card">
            <img class="card-img-top" src="..." alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{games.title}}</h5>
                <p class="card-text">Ceci est le train enchantté</p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}
