{% extends 'base.html.twig' %}

{% block title %}Abonnements{% endblock %}

{% block body %}

{% for sub in subscriptions %}

<div>
    <ul>
        <li>Title : {{ sub.title }} </li>
        <li>Games number : {{ sub.gamesNumber }} </li>
        <li>Price : {{ sub.price }} </li>
        <li>New duration : {{ sub.newDuration }} </li>
        <li>Shipping cost : {{ sub.shippingCost }} </li>
        <li>Description : {{ sub.description }} </li>
    </ul>
    <a href="{{ path('app_user_subscription_insert', {idSub: sub.id}) }}">Je m'abonne</a>
</div>

<hr>
    
{% endfor %}

{% endblock %}
